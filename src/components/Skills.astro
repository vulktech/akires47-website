---
interface Skill {
  name: string;
  icon: string;
}

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
---

<section id="skills" class="py-24 px-6 bg-zinc-900/50">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center">
            <span class="bg-gradient-to-r from-violet-400 to-cyan-400 bg-clip-text text-transparent">Skills & Technologies</span>
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {skills.map((skill) => (
                <div class="bg-zinc-900 p-4 rounded-xl border border-zinc-800 text-center hover:border-violet-500/50 transition-colors">
                    <div class="text-2xl mb-2">{skill.icon}</div>
                    <div class="font-medium">{skill.name}</div>
                </div>
            ))}
        </div>
    </div>
</section>
